# === Required base config ===
TZ=Asia/Jakarta

# Email (SMTP) settings
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=alerts@example.com
SMTP_PASS=replace_me
EMAIL_TO=you@example.com
EMAIL_FROM=Crypto Alerts <alerts@example.com>

# === Data sources (use what you have; null-safe if missing) ===
# CoinMarketCap (preferred for price/volume/24h change)
CMC_API_KEY=

# TradingView (placeholder; not strictly required)
TRADINGVIEW_USERNAME=
TRADINGVIEW_PASSWORD=

# CoinGecko (fallback / OHLC for technicals)
COINGECKO_API_BASE=https://api.coingecko.com/api/v3

# Twitter / X (preferred). If missing, falls back to snscrape.
TWITTER_BEARER_TOKEN=

# News (preferred). If missing, uses Google News RSS.
NEWSAPI_KEY=

# === Behavior toggles ===
REFRESH_MINUTES=10
MIN_ALERT_STEP_PCT=2.0
COOLDOWN_MINUTES=60
DAILY_DIGEST_LOCALTIME=23:50  # Asia/Jakarta local time
LOG_LEVEL=INFO
